<div class="row">
  <div class="large-8 large-offset-2 columns">
    <div class="row">
      <div class="large-12 columns">
        <a href="videos/new">Add</a>
      </div>
    </div>
    <% @videos.each do |video| %>
      <div class="callout">
        <div class="row">
          <div class="large-8 columns">
            Film: <%= video[:data].name %>
          </div>
          <div class="large-4 columns text-right">
            <a class="button" href="videos/<%= video[:index] %>">
              Select
            </a>
         </div>
        </div>
      </div>
    <% end %>
      <div class="row">
        <div class="large-12 columns text-center">
          <% @page_count.times do |page_number| %>
            <a class="button" href="videos?page=<%= page_number %>">
                Page <%= page_number + 1 %>
            </a>
          <% end %> 
        </div>
      </div>
  </div>
</div>