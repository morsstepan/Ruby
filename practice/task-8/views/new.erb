<div class="row">
	<div class="large-12 columns">
		<form action="/videos" method="post">
			<div class="row">
				<div class="large-12 columns">
					<label>Film title:
						<input type="text" name="name" placeholder="Inception">
					</label>
				</div>
				<div class="large-12 columns">
					<label>Release date:
						<input type="number" name="release_date" placeholder="2010">
					</label>
				</div>
				<div class="large-12 columns">
					<label>Director name:
						<input type="text" name="director_name" placeholder="Christopher Nolan">
					</label>
				</div>
				<div class="large-12 columns">
					<label>Link:
						<input type="text" name="link" placeholder="http://www.imdb.com/title/tt1375666/">
					</label>
				</div>
				<div class="large-12 columns">
					<label>Annotation:
						<p><textarea rows="10" cols="45" name="annotation" placeholder="Annotation"></textarea></p>
					</label>
				</div>
				<div class="row">
					<div class="large-12 columns">
						<input type="submit" class="button" value="Save">
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
