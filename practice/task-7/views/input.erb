<form method="post" action="calculate">
  <div class="row">
  	<h3 align="center">Нахождение площади заданного треугольника</h3>
  	<br>
    <div class="large-4 columns">
      <label>Введите сторону треугольника a 
        <input type="number" step="0.01" placeholder="1" name="number_a">
      </label>
    </div>
    <div class="large-4 columns">
      <label>Введите сторону треугольника b
        <input type="number" step="0.01" placeholder="2" name="number_b">
      </label>
    </div>
    <div class="large-4 columns">
      <label>Введите сторону треугольника c
        <input type="number" step="0.01" placeholder="2" name="number_c">
      </label>
    </div>
  </div>
  <div class="row">
    <div class="large-12 column text-right">
      <input type="submit" class="button" value="Вычислить">
    </div>
  </div>
</form>